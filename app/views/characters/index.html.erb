<h1>Your Characters</h1>
<hr>

  <% @characters.each do |c| %>
  <% if (current_user.id === c.user_id) %>
    <p>Name: <%= c.name %></p>
    <p>Age: <%= c.age %></p>
    <p>Level: <%= c.level %></p>
    <p>Experience: <%= c.xp %></p>
    <p>Class: <%= c.class %></p>
    <p>Character Story: <%= c.description %></p>
    <%=link_to "Character Details", character_path(c.id) %>
      <hr>
  <% end %>

<% end %>
