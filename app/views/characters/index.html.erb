<h1>Your Characters</h1>
<hr>
<% @characters.each do |c| %>
  <div class="cards">
    <div class="card">
      <% if (current_user.id === c.user_id) %>
        <div class="card-image">
          <img src="<%= c.image %>">
        </div>
      <div class="card-header">
        <p>Name: <%= c.name %></p>
      </div>
      <div class="card-copy">
        <p>Age: <%= c.age %></p>
        <p>Level: <%= c.level %></p>
        <p>Experience: <%= c.xp %></p>
        <p>Class: <%= c.class_name %></p>
        <%=link_to "Character Details", character_path(c.id) %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
