<div class="container">
  <%= form_for @character do |c| %>
    <div>
      Name:<%= c.text_field :name %>
    </div>
    <div>
      Age:<%= c.number_field :age %>
    </div>
    <div>
      Level:<%= c.number_field :level %>
    </div>
    <div>
      Experience:<%= c.number_field :xp %>
    </div>
    <div>
      Class:<% @character_classes.each do |d| %>
         <%= c.radio_button('class_name', d["name"])%> <%=d["name"]%>
      <% end %>
    </div>
    <div>
      Description:<%=c.text_area :description %>
    </div>
    <div>
      Party Role:<%= c.text_field :party_role %>
    </div>
    <div>
      Party Id:<%= c.text_field :party_id%>
    </div>
    <%= button_to 'Save Changes', {action:"update", id:@character.id}, method: :put %>
  <% end %>
</div>
