<div>

<hr>
  <% if (current_user.id == @character.user_id) %>
      <p>Name: <%= @character.name %></p>
      <p>Age: <%= @character.age %></p>
      <p>Race: <%= @character.race %></p>
      <p>Level: <%= @character.level %></p>
      <p>Experience: <%= @character.xp %></p>
      <p>Class: <%= @character.class_name %></p>
      <p>Character Story: <%= @character.description %></p>
    <% end %>
<%= button_to "Delete Character", {action:"destroy", id: @character.id}, method: :delete, data: { confirm: "Is the adventure over?"} %>

</div>
