<div class="container">
  <% if (current_user.id == @character.user_id) %>
      <p>Name: <%= @character.name %></p>
      <p>Age: <%= @character.age %></p>
      <p id="race">Race: <%= @character.subrace %></p>

      <p>Level: <%= @character.level %></p>
      <p>Proficiency Bonus:
        <% if (@character.level <= 4) %>
          <%= "+2" %>
        <% elsif (@character.level >=5 && @character.level <= 8) %>
          <%= "+3" %>
        <% elsif (@character.level >=9 && @character.level <=12) %>
          <%= "+4" %>
        <% elsif (@character.level >= 13 && @character.level <= 16 ) %>
          <%= "+5" %>
        <% elsif (@character.level >= 17 && @character.level <= 20 ) %>
          <%= "+6"%>
        <% end %>
      </p>

      <p>Experience: <%= @character.xp %></p>
      <p>Class: <%= @character.class_name %></p>
        <% if @character.class_name === "Barbarian" %>
          <p>Class Feature:<%= @chosen_barbarian %></p>
        <% end %>
        <% if @character.class_name === "Cleric" %>
          <p>Class Feature:<%= @chosen_cleric %></p>
        <% end %>
        <% if @character.class_name === "Bard" %>
          <p>Class Feature:<%= @chosen_bard %></p>
        <% end %>
        <% if @character.class_name === "Druid" %>
          <p>Class Feature:<%= @chosen_druid %></p>
        <% end %>

      <p>Alignment: <%= @character.alignment %></p>
      <p>Character Story: <%= @character.description %></p>
      <img class="character-image" src="<%= @character.image %>" />
    <% end %>
<%= link_to "Edit Character", {action:"edit", id: @character.id}, method: :get, class:"btn btn-large" %>
<br />
<br />
<%= button_to "Delete Character", {action:"destroy", id: @character.id}, method: :delete, class:"btn btn-large", data: { confirm: "Is the adventure over?"} %>


</div>
