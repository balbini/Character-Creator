<% content_for :top_content do %>
  <div class="jumbotron">
    <div class="container">
      <h1>Create An Adventurer</h1>
      <p>Sign up to get started.</p>
      <p>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary btn-lg' %>
      </p>
    </div>
  </div>
<% end %>
<% if current_user != nil %>
  <div class="newCharacter">
    <%= link_to 'Create a New Character', new_character_path %>
  </div>
  <br>
  <div class="allCharacters">
    <%= link_to 'All Characters',
    characters_path %>
<% end %>
